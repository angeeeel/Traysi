<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fcpc.traysi">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DriverActivity"
            android:label="@string/title_activity_driver"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".PassengerActivity"
            android:label="@string/title_activity_passenger"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".UserSelectionActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>